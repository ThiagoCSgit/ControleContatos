@model UsuarioModel
@{
    ViewData["Title"] = "Apagar usuário";
}

<div class="text-center">
    <h1 class="display-4">Deseja realmente apagar o usuário (@Model.Name)?</h1>
</div>

<a class="btn btn-primary w-100 mb-2" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>