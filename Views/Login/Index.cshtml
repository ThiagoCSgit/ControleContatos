@model ControleContatos.Models.LoginModel;

@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
	<div class="alert alert-danger" role="alert">
		<button class="btn btn-danger btn-sm close-alert" arial-label="Close" type="button">X</button>
		@TempData["MensagemErro"]
	</div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
	<div class="mb-3">
		<label class="form-label" for="Login">Login</label>
		<input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
		@Html.ValidationMessageFor(x => x.Login)
	</div>
	<div class="mb-3">
		<label class="form-label" for="Password">Senha</label>
		<input type="password" asp-for="Password" class="form-control" placeholder="Digite a senha">
		@Html.ValidationMessageFor(x => x.Password)
	</div>
	<div class="col-12">
		<button type="submit" class="btn btn-primary w-100">Entrar</button>
	</div>
</form>